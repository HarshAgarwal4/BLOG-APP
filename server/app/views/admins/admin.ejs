<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Profile Panel</title>
    <style>
        /* General Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }
        body {
            display: flex;
            height: 100vh;
            background: linear-gradient(to right, #1f1c2c, #928dab);
            overflow: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(10px);
            color: white;
            height: 100%;
            padding: 20px;
            position: fixed;
            transition: all 0.3s;
        }
        .sidebar h2 {
            text-align: center;
            margin-bottom: 20px;
        }
        .sidebar nav a {
            display: block;
            color: white;
            text-decoration: none;
            padding: 15px;
            margin: 10px 0;
            border-radius: 10px;
            transition: background 0.3s;
        }
        .sidebar nav a:hover,
        .sidebar nav .active {
            background: rgba(255, 255, 255, 0.3);
        }

        /* Main Content */
        .content {
            margin-left: 270px;
            display: flex;
            align-items: center;
            justify-content: center;
            width: calc(100% - 270px);
            height: 100vh;
            text-align: center;
        }

        /* Admin Profile Card */
        .admin-profile {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(15px);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            color: white;
            text-align: center;
            width: 400px;
            animation: fadeIn 1s ease-in-out;
        }
        .admin-profile img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 3px solid white;
            margin-bottom: 15px;
        }
        .admin-profile h2 {
            margin-bottom: 5px;
        }
        .admin-profile p {
            margin: 5px 0;
            font-size: 16px;
        }

        /* Buttons */
        .admin-profile .btn {
            display: inline-block;
            padding: 10px 20px;
            margin-top: 15px;
            border-radius: 25px;
            border: none;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s;
        }
        .edit-btn {
            background: rgba(255, 255, 255, 0.3);
            color: white;
        }
        .edit-btn:hover {
            background: white;
            color: #1f1c2c;
        }
        .logout-btn {
            background: red;
            color: white;
        }
        .logout-btn:hover {
            background: darkred;
        }

        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .sidebar {
                width: 200px;
            }
            .content {
                margin-left: 220px;
                width: calc(100% - 220px);
            }
            .admin-profile {
                width: 90%;
            }
        }
        @media (max-width: 500px) {
            .sidebar {
                width: 100px;
                padding: 10px;
            }
            .sidebar h2 {
                font-size: 16px;
            }
            .sidebar nav a {
                padding: 10px;
                font-size: 12px;
            }
            .content {
                margin-left: 120px;
                width: calc(100% - 120px);
            }
            .admin-profile {
                width: 90%;
            }
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <aside class="sidebar">
        <h2>Admin Panel</h2>
        <nav>
            <a href="/admin" class="active">Profile</a>
            <a href="/admin/blogs">Manage Blogs</a>
            <a href="/admin/users">Manage Users</a>
            <a href="/dashboard">Act as user</a>
            <a href="/logout">Logout</a>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="content">
        <div class="admin-profile">
            <img src="<%=image%>" alt="Admin Profile">
            <h2><%=name%></h2>
            <p><strong>Bio: </strong> <%=username%></p>
            <p><strong>Email: </strong><%= email%></p>
            <p><strong>Bio: </strong> <%= about ? about.slice(0, 50) + "..." : "No bio available." %></p>
            <p><strong>Role: </strong><%=role%></p>

            <!-- Buttons -->
            <button class="btn edit-btn">Edit Profile</button>
            <button class="btn logout-btn">Logout</button>
        </div>
    </main>

</body>
</html>
