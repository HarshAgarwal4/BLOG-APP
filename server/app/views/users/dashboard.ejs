<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard | BlogApp</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background: #f8f9fa;
            color: #333;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #222;
            padding: 15px 50px;
            color: white;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
        }

        .navbar .logo {
            font-size: 24px;
            font-weight: bold;
        }

        .profile-menu {
            display: flex;
            align-items: center;
        }

        .profile-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            overflow: hidden;
            margin-right: 10px;
        }

        .profile-icon img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            background-color: white;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .profile-btn {
            background-color: #ff9800;
            padding: 5px 10px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
            min-width: 100px;
            text-align: left;
        }

        .dropdown-content a {
            display: block;
            padding: 10px;
            text-decoration: none;
            color: black;
        }

        .dropdown-content a:hover {
            background-color: #ddd;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .container {
            max-width: 900px;
            margin: 100px auto;
            padding: 20px;
        }

        .search-bar {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .search-bar input {
            width: 100%;
            max-width: 600px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 16px;
        }

        .blog-list {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .blog-card {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .blog-card h3 {
            font-size: 22px;
            margin-bottom: 8px;
        }

        .blog-card p {
            font-size: 14px;
            color: #555;
        }

        .actions {
            margin-top: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .actions .left {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .actions .right {
            display: flex;
            gap: 10px;
        }

        .actions .btn {
            padding: 8px 12px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 14px;
        }

        .read-more {
            background: #28a745;
            color: white;
        }

        .edit {
            background: #007bff;
            color: white;
        }

        .delete {
            background: #dc3545;
            color: white;
        }

        .likes {
            font-size: 16px;
            font-weight: bold;
            color: #ff6600;
        }
    </style>
</head>

<body>
    <header class="navbar">
        <div class="logo">BlogApp</div>
        <div class="profile-menu">
            <div class="profile-icon"><img src="<%= image %>" alt=""></div>
            <div class="dropdown">
                <button class="profile-btn">
                    <%=name%> â–¼
                </button>
                <div class="dropdown-content">
                    <a href="/profile">Profile</a>
                    <a href="/myblogs">My Blogs</a>
                    <a href="/logout">Logout</a>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="search-bar">
            <input type="search" id="searchInput" placeholder="Search for blogs..." oninput="searchBlogs()">
        </div>

        <div class="blog-list">
            <!-- <div class="blog-card">
                <h3>Understanding JavaScript Closures</h3>
                <p>Closures are an important concept in JavaScript that allows functions to retain access to
                    variables...</p>
                <div class="actions">
                    <div class="left">
                        <a href="/blog/1" class="btn read-more">Read More</a>
                    </div>
                    <div class="right">
                        <img src="" alt="">
                    </div>
                </div>
            </div> -->
        </div>
    </div>
    <script>
        window.addEventListener("pageshow", function (event) {
            if (event.persisted) {
                location.reload(); // Force reload when navigating back
            }
        });

        function createblogcard(title, content, id, path) {
            let html = `<div class="blog-card">
            <h3>${title}</h3>
            <p>${content.slice(0, 100)}...</p>
            <div class="actions">
                <div class="left">
                    <a href="/blog/${id}" class="btn read-more">Read More</a>
                </div>
                <div class="right">
                    <img src="${path}" alt="Blog Image" style="width: 50px; height: 50px; border-radius: 5px;">
                </div>
            </div>
        </div>`;

            let bloglist = document.querySelector(".blog-list");
            bloglist.insertAdjacentHTML("beforeend", html);
        }

        async function loadallBlogPosts() {
            try {
                let response = await fetch("/getallblogs");
                let data = await response.json();

                let blogPostsContainer = document.querySelector(".blog-list");
                blogPostsContainer.innerHTML = "";

                if (data.status === 1 && data.blogs.length > 0) {
                    let reversedBlogs = data.blogs.reverse();
                    reversedBlogs.forEach(post => {
                        createblogcard(post.title, post.content, post._id, post.path || "default.jpg");
                    });
                } else {
                    blogPostsContainer.innerHTML = "<h3>No blogs available</h3>";
                }
            } catch (error) {
                console.error("Failed to load blogs:", error);
                alert("Error loading blogs. Please try again.");
            }
        }

        function searchBlogs() {
            let input = document.getElementById("searchInput").value.toLowerCase();
            let blogCards = document.querySelectorAll(".blog-card");

            blogCards.forEach(card => {
                let title = card.querySelector("h3").innerText.toLowerCase();
                let content = card.querySelector("p").innerText.toLowerCase();

                if (title.includes(input) || content.includes(input)) {
                    card.style.display = "block"; // Show matching blogs
                } else {
                    card.style.display = "none"; // Hide non-matching blogs
                }
            });
        }


        loadallBlogPosts();
    </script>
</body>

</html>